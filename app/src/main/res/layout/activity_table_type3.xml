<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.group12.smartrms.smartrms.TableType3Activity"
    android:background="#9e9e9e">

    <Button
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:text="Private-dining room 01"
        android:id="@+id/bTable1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textColor="@android:color/white"
        android:onClick="SelectTable1"
        android:textSize="20dp"
        android:background="#3f61f5" />

    <Button
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:text="Private-dining room 02"
        android:id="@+id/bTable2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:textColor="@android:color/white"
        android:onClick="SelectTable2"
        android:textSize="20dp"
        android:background="#3f61f5" />

</RelativeLayout>
