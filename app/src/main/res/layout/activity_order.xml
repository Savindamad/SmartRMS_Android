<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.group12.smartrms.smartrms.OrderActivity">

    <Button
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:text="Add new order"
        android:id="@+id/bAddOrder"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:textColor="@android:color/white"
        android:onClick="NewOrder"
        android:textSize="18sp"
        android:background="#928e8e" />

    <Button
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:text="View and edit order"
        android:id="@+id/bViewOrder"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        android:textColor="@android:color/white"
        android:onClick="ViewAndEditOrder"
        android:textSize="18sp"
        android:background="#928e8e" />

    <Button
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:text="Notify to cleaner"
        android:id="@+id/bNotifyCleaner"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:textColor="@android:color/white"
        android:onClick="NotifyCleaner"
        android:textSize="18sp"
        android:background="#928e8e" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Table num"
        android:id="@+id/tvTableNum"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
